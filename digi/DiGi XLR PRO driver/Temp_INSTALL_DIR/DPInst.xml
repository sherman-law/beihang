<?xml version="1.0" ?>
  <dpinst>

<!-- The following search and subDirectory elements direct
     DPInst to search all subdirectories (under the DPInst working directory) to locate driver
     packages. -->
    <search>
      <subDirectory>*</subDirectory>
	</search>

<!-- The following language element localizes its child elements
     for the English (Standard) language. The child elements
     customize the text that appears on the DPInst wizard pages. -->
    <language code="0x0409">
      <dpinstTitle>Digi XLR PRO Installler</dpinstTitle>
      <welcomeTitle>Welcome to the Digi XLR PRO Installer!</welcomeTitle>
      <welcomeIntro>This wizard will install the drivers for your Digi XLR PRO.</welcomeIntro>
      <!-- <eulaHeaderTitle>End User License Agreement</eulaHeaderTitle>
      <eulaYesButton>I &amp;accept this EULA</eulaYesButton>
      <eulaNoButton>I do n&amp;ot accept this EULA</eulaNoButton> -->
      <installHeaderTitle>Installing the drivers for your Digi XLR PRO...</installHeaderTitle>
      <finishTitle>Congratulations! You are finished installing your Digi XLR PRO.</finishTitle>
      <finishText>Enjoy using the Digi XLR PRO.</finishText>
      <eula type="txt" path="Driver\EULA.txt"/>
    </language>

<!-- The following three elements customize, but do not localize,
     the icon and bitmaps that appear on the DPInst wizard pages. -->
    <icon>Driver\icon.ico</icon>
	<!-- <headerPath>Driver\Header.bmp</headerPath> -->
    <watermarkPath>Driver\digilogo.bmp</watermarkPath>

  </dpinst>
